package com.example.demo;

import org.springframework.kafka.annotation.KafkaListener;
import org.springframework.messaging.handler.annotation.Header;
import org.springframework.messaging.handler.annotation.Payload;
import org.springframework.stereotype.Component;

@Component
public class RealConsumer {

	 @KafkaListener(containerFactory = "kafkaListenerContainerFactory",topics = "test", groupId = "test_group")
	 public void consume(@Payload String message,
			 			@Header(KafakaHeaders.RECEIVED_MESSAGE_KEY) String key) {
		 System.out.println("consumed key: "+ key + " Consumed message: " + message);
	    
	 }
}
